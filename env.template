# NeuroStack Environment Configuration Template (GCP Branch)
# Copy this file to .env and fill in your actual values

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# RAG Configuration
RAG_MAX_CONTEXT_TOKENS=4000
SYSTEM_PROMPT=You are a helpful AI assistant powered by NeuroStack.

# =============================================================================
# GCP CONFIGURATION (Primary Cloud Platform)
# =============================================================================

# GCP Core Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCP_PROJECT_ID=your_project_id
GCP_REGION=us-central1

# Vertex AI Configuration
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL_NAME=text-bison
VERTEX_AI_ENDPOINT=https://us-central1-aiplatform.googleapis.com

# Cloud Functions Configuration
CLOUD_FUNCTIONS_REGION=us-central1
CLOUD_FUNCTIONS_RUNTIME=python311
CLOUD_FUNCTIONS_MEMORY=256MB
CLOUD_FUNCTIONS_TIMEOUT=540s

# Cloud Run Configuration
CLOUD_RUN_REGION=us-central1
CLOUD_RUN_SERVICE_NAME=neurostack-api
CLOUD_RUN_CPU=1
CLOUD_RUN_MEMORY=512Mi
CLOUD_RUN_MAX_INSTANCES=10

# Cloud Storage Configuration
GCS_BUCKET_NAME=neurostack-data
GCS_BUCKET_LOCATION=us-central1

# Cloud Pub/Sub Configuration
PUBSUB_TOPIC_NAME=neurostack-events
PUBSUB_SUBSCRIPTION_NAME=neurostack-subscription

# Cloud Logging Configuration
CLOUD_LOGGING_ENABLED=true
CLOUD_LOGGING_LEVEL=INFO

# Cloud Monitoring Configuration
CLOUD_MONITORING_ENABLED=true
CLOUD_MONITORING_PROJECT_ID=your_project_id

# Firestore Configuration
FIRESTORE_DATABASE_ID=neurostack-db
FIRESTORE_COLLECTION_AGENTS=agents
FIRESTORE_COLLECTION_WORKFLOWS=workflows
FIRESTORE_COLLECTION_MEMORY=memory

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================

# Vertex AI Models (Primary)
VERTEX_AI_TEXT_MODEL=text-bison@001
VERTEX_AI_CHAT_MODEL=chat-bison@001
VERTEX_AI_EMBEDDING_MODEL=textembedding-gecko@001

# OpenAI Configuration (Fallback)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Anthropic Configuration (Alternative)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# AZURE CONFIGURATION (Optional - for hybrid setups)
# =============================================================================

# Azure OpenAI Configuration (Optional)
AZURE_OPENAI_ENDPOINT=https://your-apim-gateway.azure-api.net/openai
AZURE_OPENAI_KEY=your_apim_subscription_key_here
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure Cognitive Services Configuration (Optional)
AZURE_COGNITIVE_SERVICES_ENDPOINT=https://your-apim-gateway.azure-api.net/cognitive
AZURE_COGNITIVE_SERVICES_KEY=your_apim_subscription_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Cloud SQL Configuration (Primary Database)
CLOUD_SQL_INSTANCE_NAME=neurostack-sql
CLOUD_SQL_DATABASE_NAME=neurostack
CLOUD_SQL_USER=neurostack_user
CLOUD_SQL_PASSWORD=your_sql_password_here
CLOUD_SQL_CONNECTION_NAME=your_project:us-central1:neurostack-sql

# Local Database Configuration (Development)
DATABASE_URL=postgresql://user:password@localhost/neurostack
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# =============================================================================
# CACHE & MEMORY CONFIGURATION
# =============================================================================

# Memorystore Redis Configuration (Primary Cache)
MEMORYSTORE_REDIS_HOST=your_redis_host
MEMORYSTORE_REDIS_PORT=6379
MEMORYSTORE_REDIS_PASSWORD=your_redis_password_here

# Local Redis Configuration (Development)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# =============================================================================
# MEMORY & VECTOR STORAGE
# =============================================================================

# Vector Memory Configuration
VECTOR_MEMORY_EMBEDDING_MODEL=textembedding-gecko@001
VECTOR_MEMORY_MAX_ITEMS=10000
VECTOR_MEMORY_STORAGE_TYPE=gcs
VECTOR_MEMORY_GCS_BUCKET=neurostack-vectors

# Memory Configuration
MEMORY_RETENTION_DAYS=30
MEMORY_MAX_SIZE_MB=1000
MEMORY_STORAGE_TYPE=firestore

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Cloud Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/neurostack.log
CLOUD_LOGGING_RESOURCE_TYPE=gce_instance

# Cloud Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
CLOUD_MONITORING_METRICS_ENABLED=true

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# GCP IAM Configuration
GCP_SERVICE_ACCOUNT_EMAIL=neurostack@your_project.iam.gserviceaccount.com
GCP_SERVICE_ACCOUNT_KEY_FILE=path/to/service-account.json

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Security
API_KEY_HEADER=X-API-Key
API_KEY=your_api_key_here

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Default Agent Settings
DEFAULT_AGENT_MODEL=chat-bison@001
DEFAULT_AGENT_TEMPERATURE=0.7
DEFAULT_AGENT_MAX_TOKENS=1000

# Agent Memory Settings
AGENT_MEMORY_ENABLED=true
AGENT_REASONING_ENABLED=true
AGENT_STORAGE_BACKEND=firestore

# =============================================================================
# WORKFLOW CONFIGURATION
# =============================================================================

# Workflow Settings
WORKFLOW_MAX_STEPS=50
WORKFLOW_TIMEOUT_SECONDS=300
WORKFLOW_RETRY_ATTEMPTS=3
WORKFLOW_STORAGE_BACKEND=firestore

# Cloud Functions Workflow Triggers
WORKFLOW_TRIGGER_TOPIC=neurostack-workflows
WORKFLOW_RESULT_TOPIC=neurostack-results

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# LangGraph Integration
LANGGRAPH_ENABLED=false
LANGGRAPH_ENDPOINT=http://localhost:8123

# MCP Protocol Settings
MCP_ENABLED=true
MCP_PORT=3000

# A2A Protocol Settings
A2A_ENABLED=true
A2A_PORT=3001

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development Settings
DEBUG=false
TESTING=false
MOCK_LLM_RESPONSES=false
USE_LOCAL_SERVICES=false

# Test Configuration
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost/neurostack_test
TEST_REDIS_URL=redis://localhost:6379/1
TEST_GCP_PROJECT_ID=your_test_project_id

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================

# Performance Settings
MAX_CONCURRENT_AGENTS=10
MAX_CONCURRENT_WORKFLOWS=5
AGENT_TIMEOUT_SECONDS=60

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_BACKEND=memorystore

# Auto-scaling Configuration
AUTO_SCALING_ENABLED=true
MIN_INSTANCES=1
MAX_INSTANCES=10
TARGET_CPU_UTILIZATION=0.7

# =============================================================================
# DEPLOYMENT & ENVIRONMENT
# =============================================================================

# Environment
ENVIRONMENT=development
# Options: development, staging, production

# GCP Deployment Settings
DEPLOYMENT_REGION=us-central1
DEPLOYMENT_VERSION=0.1.0
DEPLOYMENT_SERVICE_ACCOUNT=neurostack-deploy@your_project.iam.gserviceaccount.com

# Cloud Run Deployment
CLOUD_RUN_SERVICE_URL=https://neurostack-api-xxxxx-uc.a.run.app
CLOUD_RUN_REVISION_NAME=neurostack-api-00001-abc

# Health Check Settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8080
HEALTH_CHECK_PATH=/health

# =============================================================================
# GCP SPECIFIC FEATURES
# =============================================================================

# BigQuery Configuration (for analytics)
BIGQUERY_DATASET=neurostack_analytics
BIGQUERY_TABLE_AGENTS=agents
BIGQUERY_TABLE_WORKFLOWS=workflows

# Cloud Scheduler Configuration
CLOUD_SCHEDULER_ENABLED=true
CLOUD_SCHEDULER_CRON=*/5 * * * *

# Cloud Tasks Configuration
CLOUD_TASKS_ENABLED=true
CLOUD_TASKS_QUEUE_NAME=neurostack-tasks
CLOUD_TASKS_LOCATION=us-central1 